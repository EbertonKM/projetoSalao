<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.demo.controllers.TelaGerenciarServicosController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Novo serviço:"/>
    <Label text="Descrição:"/>
    <TextField fx:id="descricaoTextField" maxWidth="250"/>
    <Label text="Preço:"/>
    <TextField fx:id="precoTextField" maxWidth="250"/>
    <Button text="Novo" onAction="#onNovoButtonClick" maxWidth="250"/>
    <Button text="Excluir" onAction="#onExcluirButtonClick" maxWidth="250"/>

    <ListView fx:id="tabelaServicos" prefHeight="200" prefWidth="400"/>

    <TextField fx:id="novoPrecoTextField" maxWidth="250"/>
    <Button text="Definir preço" onAction="#onDefinirPrecoButtonClick" maxWidth="250"/>

    <Button text="Voltar" onAction="#onVoltarButtonClick" maxWidth="250"/>

</VBox>
